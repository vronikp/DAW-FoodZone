@model FoodZone.Models.HorarioPlato

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>HorarioPlato</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Horari_Codigo)

        @Html.HiddenFor(model => model.Plato_Codigo)

        <div class="form-group">
            @Html.LabelFor(model => model.HorPla_Activo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HorPla_Activo)
                @Html.ValidationMessageFor(model => model.HorPla_Activo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Usuari_Codigo, "Usuari_Codigo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Usuari_Codigo", String.Empty)
                @Html.ValidationMessageFor(model => model.Usuari_Codigo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
